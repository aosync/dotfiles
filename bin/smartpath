#!/bin/sh

# Get git repo name

repo_path=$(git rev-parse --show-toplevel 2> /dev/null)

if [ ! -z "$repo_path" ]; then
    repo=$(basename "$repo_path")
    branch=$(git branch | grep \* | cut -d ' ' -f2)
    echo $(echo "$PWD" | sed "s|^$repo_path\(.*\)|git@$repo\1:$branch|")
else
	echo $(echo "$PWD" | sed "s|^$HOME\(.*\)|~\1|")
fi
